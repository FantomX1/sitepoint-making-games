<?php

namespace App\Action;

use Aerys\Request;
use Aerys\Response;

class HomeAction
{
    public function __invoke(Request $request,
        Response $response)
    {
        $js = yield mix("/js/app.js");
        $css = yield mix("/css/app.css");

        $response->end("
            <link rel='stylesheet' href='{$css}' />
            <div class='app'></div>
            <script src='{$js}'></script>
        ");
    }
}
